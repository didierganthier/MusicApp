<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.musicapp.MainActivity" >

    <Button
        android:id="@+id/c_key"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#cf0000"
        android:layout_margin="2dp"
        android:layout_gravity="center" 
        android:onClick="playC"/>

    <Button
        android:id="@+id/d_key"
        android:layout_width="298dp"
        android:layout_height="65dp"
        android:background="#f36700"
        android:layout_margin="2dp"
         android:layout_gravity="center" 
         android:onClick="playD"/>

    <Button
        android:id="@+id/e_key"
        android:layout_width="286dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:background="#f3cb00" 
        android:layout_margin="2dp"
        android:onClick="playE"/>

    <Button
        android:id="@+id/f_key"
        android:layout_width="274dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:background="#00ec00" 
        android:onClick="playF"/>

    <Button
        android:id="@+id/g_key"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:background="#00ec83" 
        android:onClick="playG"/>

    <Button
        android:id="@+id/a_key"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:background="#0000de" 
        android:onClick="playA"/>

    <Button
        android:id="@+id/b_key"
        android:layout_width="249dp"
        android:layout_height="65dp"
        android:background="#a700de"
        android:layout_margin="2dp"
        android:layout_gravity="center" 
        android:onClick="playB"/>

</LinearLayout>
